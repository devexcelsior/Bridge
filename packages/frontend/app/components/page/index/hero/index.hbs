<div class="hero-component" {{did-insert this.setupObserver}}>
    <Shared::Starfield />
    <div class="hero-component__content">
        <div class="oh">
            <Hds::Text::Display @tag="h1" @size="500"
                class="g-type-display-1 font_gilmer {{if this.isVisible 'on-canv-display' 'off-canv-display'}}">
                Unify your infrastructure.
            </Hds::Text::Display>
        </div>
        <div class="oh">
            <Hds::Text::Body @tag="p"
                class="hero-component__content-body {{if this.isVisible 'on-canv-body' 'off-canv-body'}}">
                Unified multi-cloud, and on-prem infrastructure.
            </Hds::Text::Body>
        </div>
        <ul class="hero-component__ctas">
            <li class="oh">
                <Hds::Button @text="Sign up for free" @size="large" @icon="cloud" class="hds-button--color-waypoint {{if this.isVisible 'on-canv-btn' 'off-canv-btn'}}" />
            </li>
        </ul>
    </div>
</div>